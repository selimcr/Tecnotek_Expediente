<script src="{{ asset('saintmichael/javascripts/foundation/foundation.reveal.js') }}"></script>
<script src="{{ asset('saintmichael/javascripts/foundation/foundation.section.js') }}"></script>
<script src="{{ asset('saintmichael/javascripts/foundation/foundation.tooltips.js') }}"></script>
<script src="{{ asset('saintmichael/javascripts/foundation/foundation.topbar.js') }}"></script>

{% if is_granted('ROLE_PROFESOR') %}
<script type="text/javascript" src="{{ asset('js/teacher_application.js') }}"></script>
{% else %}
<script type="text/javascript" src="{{ asset('js/superadmin_application.js') }}"></script>
{% endif %}

{% block extrajs %}{% endblock %}

