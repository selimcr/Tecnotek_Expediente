{% extends 'TecnotekExpedienteBundle::logged_layout.html.twig' %}

{% block htmlTitle %}
    Tecnotek :: Expediente :: Super Administrador :: Periodo
{% endblock %}

{% block extrajs %}
<script type="text/javascript">
    Tecnotek.module = "entityList";
    Tecnotek.assetsURL = "{{ path('TecnotekExpedienteBundle_homepage')}}";
    Tecnotek.UI.urls["admin"] = "{{ path('_expediente_sysadmin_period_migration_manage_simple')}}";
</script>
{% endblock %}

{% block content %}
<div class="container_24">
    <div class="grid_24">
        <div class="titleRow">
            <div class="left"><h3>{% trans %}label.period.migration.list{% endtrans %}</h3></div>
            <div class="right"><a href="{{ path('_expediente_sysadmin_period_migration_create') }}" class="button success-darker tiny">
                    <span></span>{% trans %}label.create.migration{% endtrans %}</a>
            </div>
            <div class="clear"></div>
        </div>

        <div class="table">
            <div class="row tableHeader">
                <div class="option_width" style="float: left; width: 200px;">{% trans %}source.period{% endtrans %}</div>
                <div class="option_width" style="float: left; width: 200px;">{% trans %}destination.period{% endtrans %}</div>
                <div class="option_width" style="float: left; width: 150px;">{% trans %}label.status{% endtrans %}</div>
            </div>

            {% for entity in pagination %}
            <div class="row userRow {% if loop.index%2 == 0 %}tableRowOdd{%else%}tableRow{% endif %}">
                <div class="option_width" style="float: left; width: 200px;">{{ entity.sourcePeriod }}</div>
                <div class="option_width" style="float: left; width: 200px;">{{ entity.destinationPeriod }}</div>
                <div class="option_width" style="float: left; width: 150px;">{{ ('period.migration.status.'~entity.status)|trans }}</div>
                <a href="#" class="right imageButton adminButton" rel="{{ entity.id }}"></a>
                <div class="clear"></div>
            </div>
            {% endfor %}

        </div>
        <br/>
        <div style="margin-bottom:75px;">
            {# display navigation #}    
            {{ pagination.render()|raw }}
        </div>    
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>
{% endblock %}