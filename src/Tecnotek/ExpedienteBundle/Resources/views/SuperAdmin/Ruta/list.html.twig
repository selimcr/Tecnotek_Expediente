{% extends 'TecnotekExpedienteBundle::logged_layout.html.twig' %}

{% block htmlTitle %}
    Tecnotek :: Expediente :: Super Administrador :: Ruta
{% endblock %}

{% block extrajs %}
<script type="text/javascript">
    Tecnotek.module = "entityList";
    Tecnotek.assetsURL = "{{ path('TecnotekExpedienteBundle_homepage')}}";
    Tecnotek.UI.urls["show"] = "{{ path('_expediente_sysadmin_route_show_simple')}}";
    Tecnotek.UI.urls["edit"] = "{{ path('_expediente_sysadmin_route_edit_simple')}}";
</script>
{% endblock %}

{% block content %}
<div class="container_24">
    <div class="grid_24">
        <div>
            <div class="left"><h1>{% trans %}label.route.listar{% endtrans %}</h1></div>
            <div class="right"><a href="{{ path('_expediente_sysadmin_route_create') }}" class="btn add"><span></span>{% trans %}label.add{% endtrans %}</a></div>
            <div class="clear"></div>
        </div>
        
        <div class="row tableHeader">
            <div class="option_width" style="float: left; width: 100px;">{% trans %}label.code{% endtrans %}</div>
            <div class="option_width" style="float: left; width: 300px;">{% trans %}label.description{% endtrans %}</div>
            <div class="option_width" style="float: left; width: 175px;">{% trans %}label.students.quantity{% endtrans %}</div>
            <div class="option_width" style="float: left; width: 150px;">{% trans %}label.institution{% endtrans %}</div>
            <div class="option_width" style="float: left; width: 100px;">{% trans %}label.type{% endtrans %}</div>
        </div>
            
        {% set counter = 0 %}   

        {% for entity in pagination %}            
            <div class="row userRow {% if counter%2 == 0 %}tableRowOdd{%else%}tableRow{% endif %}" rel="{{ entity.id }}">
                <div class="option_width" style="float: left; width: 100px;">{{ entity.code }}</div>
                <div class="option_width" style="float: left; width: 300px;">{{ entity.description }}</div>
                <div class="option_width" style="float: left; width: 175px;">{% if entity.routeType == 1 %} {{ entity.students|length }} {% else %} {{ entity.studentsToRoute|length }} {% endif %}</div>
                <div class="option_width" style="float: left; width: 150px;">{{ entity.institution }}</div>
                <div class="option_width" style="float: left; width: 100px;">{% if entity.routeType == 1 %}{%trans%} label.route.type.1 {% endtrans %} {% else %} {%trans%} label.route.type.2 {% endtrans %} {% endif %}</div>
                <div class="right imageButton editButton"  title="{% trans %}label.edit{% endtrans %}"  rel="{{ entity.id }}"></div>
                <div class="right imageButton viewButton"  title="{% trans %}label.view{% endtrans %}"  rel="{{ entity.id }}"></div>
                <div class="clear"></div>
            </div>
            {% set counter = counter + 1 %}
        {% endfor %}
        <br/>
    
        <div style="margin-bottom:75px;">
            {# display navigation #}    
            {{ pagination.render()|raw }}
        </div>    
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
    <div class="wrapper">
            <div class="grid_24 padline">
                    <div class="lineH"></div>
            </div>
    </div>
</div>
{% endblock %}