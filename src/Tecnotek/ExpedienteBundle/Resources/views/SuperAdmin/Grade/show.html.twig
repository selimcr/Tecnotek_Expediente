{% extends 'TecnotekExpedienteBundle::logged_layout.html.twig' %}

{% block htmlTitle %}
    Tecnotek :: Expediente :: Super Administrador :: Grado
{% endblock %}

{% block extracss %}
{% endblock %}

{% block extrajs %}
<script type="text/javascript">
    Tecnotek.UI.urls["deleteURL"] = "{{ path("_expediente_sysadmin_grade_delete", {id: entity.id}) }}";
    Tecnotek.UI.translates["confirmDelete"] = "{% trans %}messages.confirmation.grade.delete{% endtrans %}";
    Tecnotek.module = "showEntity";
    Tecnotek.assetsURL = "{{ path('TecnotekExpedienteBundle_homepage')}}";
</script>
{% endblock %}

{% block content %}
<div class="container_24" style="width: 800px;">
    <div class="grid_24" style="width: 100%;">
        <div class="panelRow" id="doc-forms">
            <div class="large-12 columns">
                <div class="titleRow">
                    <div class="left"><h3>{% trans %}label.grade.show{% endtrans %}</h3></div>
                    <div class="right"><a href="{{ path('_expediente_sysadmin_grade') }}" class="button success-darker tiny"><span></span>{% trans %}label.back.list{% endtrans %}</a></div>
                    <div class="clear"></div>
                </div>

                <div id="showContainer">

                    <div>
                        <label>{%trans%}label.name{%endtrans%}</label>
                        <span id="labelName">{{ entity.name }}</span>
                    </div>

                    <div>
                        <label>{%trans%}label.number{%endtrans%}</label>
                        <span id="labelName">{{ entity.number }}</span>
                    </div>

                    <div id="buttonsContainer" style="margin-top: 25px;">
                        <a href="{{ path('_expediente_sysadmin_grade_edit', {'id': entity.id}) }}" class="left button success-darker tiny"><span></span>{% trans %}label.edit{% endtrans %}</a>
                        <div class="left button success-darker tiny" id="btnEliminar" style="margin-left: 25px;"><span></span>{% trans %}label.eliminar{% endtrans %}</div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}