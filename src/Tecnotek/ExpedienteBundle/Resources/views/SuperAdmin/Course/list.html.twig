{% extends 'TecnotekExpedienteBundle::logged_layout.html.twig' %}

{% block htmlTitle %}
    Tecnotek :: Expediente :: Super Administrador :: Curso
{% endblock %}

{% block extrajs %}
<script type="text/javascript">
    Tecnotek.module = "entityList";
    Tecnotek.assetsURL = "{{ path('TecnotekExpedienteBundle_homepage')}}";
    Tecnotek.UI.urls["show"] = "{{ path('_expediente_sysadmin_course_show_simple')}}";
    Tecnotek.UI.urls["edit"] = "{{ path('_expediente_sysadmin_course_edit_simple')}}";
</script>
{% endblock %}

{% block content %}
<div class="container_24">
    <div class="grid_24">
        <div class="titleRow">
            <div class="left"><h3>{% trans %}label.course.listar{% endtrans %}</h3></div>
            <div class="right"><a href="{{ path('_expediente_sysadmin_course_create') }}" class="button success-darker tiny"><span></span>{% trans %}label.add{% endtrans %}</a></div>
            <div class="clear"></div>
        </div>

        <div class="table">
            <div class="row tableHeader">
                <div class="option_width" style="float: left; width: 150px;">{% trans %}label.name{% endtrans %}</div>
                <div class="option_width" style="float: left; width: 75px;">{% trans %}label.type{% endtrans %}</div>
            </div>

            {% for entity in pagination %}
            <div class="row userRow {% if loop.index%2 == 0 %}tableRowOdd{%else%}tableRow{% endif %}">
                <div class="option_width" style="float: left; width: 150px;">{{ entity.name }}</div>
                <div class="option_width" style="float: left; width: 75px;">{{ entity.type }}</div>
                <div class="right imageButton editButton"  title="{% trans %}label.edit{% endtrans %}"  rel="{{ entity.id }}"></div>
                <div class="right imageButton viewButton"  title="{% trans %}label.view{% endtrans %}"  rel="{{ entity.id }}"></div>
                <div class="clear"></div>
            </div>
            {% endfor %}
        </div>

        <br/>
    
        <div style="margin-bottom:75px;">
            {# display navigation #}    
            {{ pagination.render()|raw }}
        </div>    
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
    <div class="wrapper">
            <div class="grid_24 padline">
                    <div class="lineH"></div>
            </div>
    </div>
</div>
{% endblock %}